@model TriatlonLogic.DataTransferObjects.EredmenySelectDto

@{
	ViewData["Title"] = "Select";
}

<br />
<h1>Eredmények</h1>
<br />

<h4>Verseny kiválasztása</h4>



<div class="row">
	<div class="col-md-4">
		<form method="post" asp-action="List">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
					<label class="control-label">Versenyek: </label>
						@Html.DropDownListFor(x => x.VersenyOID, Model.VersenySelectList, "--Kérlek válassz--", new { id = "DropDownL" })
					<span asp-validation-for="VersenyOID" class="text-danger"></span>
				</div>
			<div class="form-group">
				@Html.ActionLink("Eredmények mutatása", "List", "Eredmeny", new { oid = "ListValue" }, new { id = "Link" })
			</div>
		</form>
	</div>
</div>



