@model TriatlonLogic.Models.Verseny

@{
	ViewData["Title"] = "Verseny létrehozása";
}

<br />
<h2><i class="bi bi-file-earmark-plus"></i> Új verseny</h2>
<hr />
<div>
	<div>
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group col-sm-4">
				<label asp-for="Nev" class="control-label"></label>
				<input asp-for="Nev" class="form-control" />
				<span asp-validation-for="Nev" class="text-danger"></span>
			</div>
			<div class="form-group col-sm-4">
				<label asp-for="Helyszin" class="control-label"></label>
				<input asp-for="Helyszin" class="form-control" />
				<span asp-validation-for="Helyszin" class="text-danger"></span>
			</div>
			<div class="form-group col-sm-4">
				<label asp-for="Datum" class="control-label"></label>
				<input asp-for="Datum" class="form-control" />
				<span asp-validation-for="Datum" class="text-danger"></span>
			</div>
			<div class="form-group col-sm-4">
				<label asp-for="UTavolsag" class="control-label"></label>
				<input asp-for="UTavolsag" class="form-control" />
				<span asp-validation-for="UTavolsag" class="text-danger"></span>
			</div>
			<div class="form-group col-sm-4">
				<label asp-for="KTavolsag" class="control-label"></label>
				<input asp-for="KTavolsag" class="form-control" />
				<span asp-validation-for="KTavolsag" class="text-danger"></span>
			</div>
			<div class="form-group col-sm-4">
				<label asp-for="FTavolsag" class="control-label"></label>
				<input asp-for="FTavolsag" class="form-control" />
				<span asp-validation-for="FTavolsag" class="text-danger"></span>
			</div>
            <div class="form-group">
                <a class="btn btn-primary" asp-action="Index"><i class="bi bi-box-arrow-left"></i></a>
                <input type="submit" value="Mentés" class="btn btn-primary" />
            </div>
		</form>
	</div>
</div>
<br />
<br />

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
