@model TriatlonLogic.Models.Versenyzo

@{
	ViewData["Title"] = "Új versenyző hozzáadása";
}

<h1>Új versenyző hozzáadása</h1>

<h4>Versenyző</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Nev" class="control-label"></label>
				<input asp-for="Nev" class="form-control" />
				<span asp-validation-for="Nev" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Nem" class="control-label"></label>
				@*<input asp-for="Nem" class="form-control" />*@
				@Html.DropDownListFor(x => x.Nem, new List<SelectListItem>
								{
									new SelectListItem {Text = "Férfi", Value = "Férfi"},
									new SelectListItem {Text = "Nő", Value = "Nő"},
									new SelectListItem {Text = "Egyéb", Value = "Egyéb"},
								}, "--Kérlek válassz--", new { })
				<span asp-validation-for="Nem" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="SzulIdo" class="control-label"></label>
				<input asp-for="SzulIdo" class="form-control" />
				<span asp-validation-for="SzulIdo" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Egyesulet" class="control-label"></label>
				<input asp-for="Egyesulet" class="form-control" />
				<span asp-validation-for="Egyesulet" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Licence" class="control-label"></label>
				<input asp-for="Licence" class="form-control" />
				<span asp-validation-for="Licence" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Hozzáadás" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Vissza a listára</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
