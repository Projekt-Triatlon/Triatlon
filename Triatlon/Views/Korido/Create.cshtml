@model TriatlonLogic.Models.Korido

@{
	ViewData["Title"] = "Hozzáadás";
}

<br />
<h2><i class="bi bi-clock"></i> Új köridő</h2>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="ChipKod" class="control-label"></label>
				<input asp-for="ChipKod" class="form-control" />
				<span asp-validation-for="ChipKod" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Szakasz" class="control-label"></label>
				@Html.DropDownListFor(x => x.Szakasz, new List<SelectListItem>
								{
									new SelectListItem {Text = "Úszás", Value = "Úszás"},
									new SelectListItem {Text = "Kerékpár", Value = "Kerékpár"},
									new SelectListItem {Text = "Futás", Value = "Futás"},
								}, "--Kérlek válassz--", new { })
				<span asp-validation-for="Szakasz" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="KorSzama" class="control-label"></label>
				<input asp-for="KorSzama" class="form-control" />
				<span asp-validation-for="KorSzama" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Ido" class="control-label"></label>
				<input asp-for="Ido" value="00:00:00" class="form-control" />
				<span asp-validation-for="Ido" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label>Versenyeredmény ID</label>
				<input asp-for="VersenyVersenyzoOID" class="form-control" />
				<span asp-validation-for="VersenyVersenyzoOID" class="text-danger"></span>
			</div>
			<div class="form-group">
				<a class="btn btn-primary" asp-action="Select" asp-controller="Eredmeny"><i class="bi bi-box-arrow-left"></i></a>
				<input type="submit" value="Mentés" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
